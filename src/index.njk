---
title: Work
layout: layouts/base.njk
hero:
  image: /images/hero-banner.jpg  # file must be at src/images/hero-banner.jpg
---

<section class="gallery">
  <div class="grid-3">
    {% if collections.artworks and collections.artworks.length %}
      {% for a in collections.artworks %}
        {% set src = a.data.image | url %}
        {% if src and src != '' %}
          <article class="card">
            <a href="{{ a.url }}" class="thumb">
              <img src="{{ src }}" alt="" loading="lazy" decoding="async">
            </a>
          </article>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</section>